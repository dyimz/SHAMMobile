<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".activities.students.StudentsEditGuardianActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/btnBackArrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
        app:title="Edit My Personal Information"
        android:textAlignment="center"
        app:titleTextColor="@color/white"
        android:elevation="5dp">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/tmothername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mother Name"
                android:textSize="17dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mothername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:hint="Mother's Name"
                android:textColorHint="@color/orange"
                app:boxStrokeColor="@color/orange"
                app:hintTextColor="@color/orange"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/tmothercontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textSize="17dp"
                android:layout_marginTop="5dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mothercontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:hint="Mother's Contact Number"
                android:textColorHint="@color/orange"
                app:boxStrokeColor="@color/orange"
                app:hintTextColor="@color/orange"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/tfathername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Father Name"
                android:textSize="17dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fathername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:hint="Father's Name"
                android:textColorHint="@color/orange"
                app:boxStrokeColor="@color/orange"
                app:hintTextColor="@color/orange"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:paddingTop="10dp"
                android:id="@+id/tfathercontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textSize="17dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fathercontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:hint="Father's Contact Number"
                android:textColorHint="@color/orange"
                app:boxStrokeColor="@color/orange"
                app:hintTextColor="@color/orange"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:paddingTop="10dp"
                android:id="@+id/tguardianname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardian Name"
                android:textSize="17dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/guardianname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:hint="Guardian's Name"
                android:textColorHint="@color/orange"
                app:boxStrokeColor="@color/orange"
                app:hintTextColor="@color/orange"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:paddingTop="10dp"
                android:id="@+id/tguardiancontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardian Contact"
                android:textSize="17dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/guardiancontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:hint="Guardian's Contact Number"
                android:textColorHint="@color/orange"
                app:boxStrokeColor="@color/orange"
                app:hintTextColor="@color/orange"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal">
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#99FB6434"
                    android:paddingHorizontal="30dp"
                    android:text="Cancel"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/orange"
                    android:paddingHorizontal="30dp"
                    android:text="SAVE"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="100dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>